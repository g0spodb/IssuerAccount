<Page x:Class="IssuerAccount.Pages.PagePersonalAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IssuerAccount.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1400"
      Title="PagePersonalAccount" Background="#659DBD" FontFamily="Bahnschrift SemiBold">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" Width="200" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="10">
            <Image x:Name="IssuerPhoto" Grid.Row="1" Width="150" Height="150" Source="{Binding Issuer.Photo}" Stretch="UniformToFill"></Image>
            <Button x:Name="AddPhoto" Click="AddPhoto_Click" Width="150" FontSize="18" Height="40" Style="{StaticResource SecondaryButtonStyle}">Добавить фото</Button>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Height="400" VerticalAlignment="Top" Orientation="Vertical" HorizontalAlignment="Left">
            <Label FontSize="30">Ваше ФИО</Label>
            <TextBlock Text="{Binding Issuer.FullName}" x:Name="FullName" Width="300" TextWrapping="Wrap" FontSize="30" Height="30"/>
            <Label FontSize="30">Адрес</Label>
            <TextBlock Text="{Binding Issuer.Adress}"  Width="300" x:Name="Adress" FontSize="30" Height="30" />
            <Label FontSize="30">Телефон</Label>
            <TextBlock Text="{Binding Issuer.Phone}"  Width="300" x:Name="Phone" FontSize="30" Height="30" />
            <Label FontSize="30">Логин</Label>
            <TextBlock Text="{Binding Issuer.Login}" x:Name="Login" FontSize="30" Height="30" />
            <Label FontSize="30">Пароль</Label>
            <TextBlock Text="{Binding Issuer.Password}" x:Name="Password" FontSize="30" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left">
            
        </StackPanel>

    </Grid>
</Page>
