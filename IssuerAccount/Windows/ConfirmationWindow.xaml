<Window x:Class="IssuerAccount.Windows.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IssuerAccount.Windows"
        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="130" Width="200" Background="#B939D3" FontFamily="Bahnschrift SemiBold">
    <Grid>
        <TextBlock Text="Вы уверены?" HorizontalAlignment="Center" FontSize="20" Foreground="AliceBlue" VerticalAlignment="Top" Margin="0 20 0 0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Да" Click="YesButton_Click" Margin="10" Width="50" Style="{StaticResource MainButtonStyle}"/>
            <Button Content="Нет" Click="NoButton_Click" Margin="10" Width="50" Height="30" Style="{StaticResource MainButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
